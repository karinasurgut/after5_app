<li>
 <div class="panel panel-default panel-deal">
  <div class="panel-body">
  	<div class="row">
  		<div class="col-xs-8">
	  		<h3 style="color:red;"><%= deal.title %></h3>
	  		<%= deal_duration_for(deal) %>
		</div>
		<div class="col-xs-4">
	  		<% if deal.score > 0 %>
	  		<p style = "color:red;">Rating: <%= deal.score %></p>
	  		<% end %>
	  		<% if deal.userlikes > 0 %>
	  		<p style = "color:red;">Likes: <%= deal.userlikes if deal.userlikes > 0%></p>
	  		<% end %>
		</div>
	</div>
	<h4><%= deal.venue.name %> <span class="glyphicon glyphicon-cutlery"></span></h4>
	<p><%= raw deal.tag_list.map { |t| link_to "#" + t, tag_path(t) }.join(' ') %>
	<p><%= deal.content %><br/>
	<%# if current_user.admin? %>
      <%= link_to "edit", edit_deal_path(deal) %>
      <span> | </span>
      <%= link_to "delete", deal, method: :delete,
                                     data: { confirm: "Are you sure?" },
                                     title: deal.id %>
    <%# end %></p>
	<div class="btn-group-sm">
		<%# if current_user.find_up_voted_items.include?(deal) %>
			<button type="button" class="btn btn-default btn-lg">
			 <span class="glyphicon glyphicon-heart-empty"></span> <%= link_to "Love", like_deal_path(deal), method: :put %>
			</button>
		
		<%# if current_user.find_down_voted_items.include?(deal) %>
			<button type="button" class="btn btn-default btn-lg">
			 <span class="glyphicon glyphicon-flash"></span> <%= link_to "Not a fan", dislike_deal_path(deal), method: :put %>
			</button>
		<% if current_user.find_liked_items.include?(deal) %>
			<button type="button" class="btn btn-warning btn-lg" >
			 <span class="glyphicon glyphicon-star"></span> <%= link_to "Want", fave_deal_path(deal), method: :put, remote: true %>
			</button>
		<% else %>
			<button type="button" class="btn btn-default btn-lg id="want-button"">
			 <span class="glyphicon glyphicon-star"></span> <%= link_to "Want", fave_deal_path(deal), method: :put %>
			</button>
		<% end %>
		<button type="button" class="btn btn-default btn-lg">
		 <span class="glyphicon glyphicon-share"></span> Tell friends
		</button>
		<%#= render 'shared/checkin_form' if user_signed_in? %>
		<button type="button" class="btn btn-default btn-lg">
		 <span class="glyphicon glyphicon-star"></span> <%= link_to "Here now?", checkin_deal_path(deal), method: :put %>
		</button>
	</div>	  
  </div>
 </div>
</li>