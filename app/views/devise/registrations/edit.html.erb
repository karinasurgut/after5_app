<% provide(:title, 'Edit Profile') %>
<div class="row">
  <div class="col-xs-6"><%= userpic_for(current_user) %></div>
  <div class="col-xs-6"><h2>Edit <%= resource_name.to_s.humanize %></h2></div>
</div>
<div class="container-fluid profile-edit-subtitle">
  <h3>About You</h3>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" })  do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-xs-2 control-label .col-xs-offset-2" %>
    <div class="col-xs-10">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: "col-xs-2 control-label .col-xs-offset-2" %>
    <div class="col-xs-10">
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, class: "col-xs-2 control-label .col-xs-offset-2" %>
    <div class="col-xs-10">
      <%= f.text_field :location %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <% if current_user.admin? %>
    <div class="form-group">
      <%#= f.label :password, class: "col-xs-2 control-label .col-xs-offset-2" %> <i>(leave blank if you don't want to change it)</i>
      <div class="col-xs-10">
        <%#= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%#= f.label :password_confirmation, class: "col-xs-2 control-label .col-xs-offset-2" %>
      <div class="col-xs-10">
        <%#= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <%#= f.label :current_password, class: "col-xs-2 control-label .col-xs-offset-2" %> <i>(we need your current password to confirm your changes)</i><br />
      <div class="col-xs-10">
        <%#= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-xs-5">
      <%= link_to "Back", user_path(current_user), class: "btn btn-default" %>
    </div>
    <div class="col-xs-5">
      <%= f.submit "Update", class: "btn btn-info" %>
    </div>
  </div>
<% end %>