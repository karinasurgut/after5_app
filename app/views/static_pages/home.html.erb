<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">  
  	<h1 class="home-title center">Your Happy Hour starts now!</h1> 
  	<h4 class="center home-title">Find the best beer, food &amp; drink<br/>deals near you.</h4>                     
	<% form_tag search_path, :method => 'get' do %>
		  <p>
		    <%= text_field_tag :search, params[:search] %>
		    <%= submit_tag "Search", :name => nil %>
		  </p>
		<% end %>
		<form id="ui_element" class="sb_wrapper navbar-form" role="search">
	    <!--<p>
			<input class="sb_input" type="text">
			<input class="sb_search" type="submit" value="">
		</p>-->
		<div class="form-group input-group">
		<input type="text" class="form-control sb_input" placeholder="E.g. wine, Newtown, Miss Peaches...">
		<span class="input-group-btn">
			<button type="submit" class="btn btn-default sb_search"><span class="glyphicon glyphicon-search"></span></button>
		</span>
	  </div>
	  <%= render 'shared/dropdown' %>
	</form>
	<%= render 'shared/modal' %>
	<div class="alert alert-info">
		<button type="button" class="close" data-dismiss="alert">
		<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
		</button>
		<h4>Check out these deals near you</h4>
		<div class= "deal-box">
			<%= render Deal.first %>
			<p style="text-align:center;">
			  <!-- Large modal -->
			<button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Here now!</button>
			<button class="btn btn-primary btn-success" type="button">Where next?</button>
			</p>
		</div>
	</div>
  </div>
</div>
<% if !user_signed_in? %>
  <%= render 'shared/fb_signin' %>
<% end %>
