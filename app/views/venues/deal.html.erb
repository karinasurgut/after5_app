<% provide(:title, 'Add Deal') %>
<h1 class = "center">Add Deal</h1>
<p class = "center">Create new deal for the <%= @venue.name %> using the form below:</p>
<div class="form-container">
    <%= form_for(@deal, html: { role: "form" }) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control", placeholder: "E.g., 5$ beer Fridays" %>
	</div>
	<div class="form-group">
      <%= f.label :content, "Description" %>
      <%= f.text_field :content, class: "form-control", placeholder: "Enter more detailed description" %>
	</div>
      <%= f.hidden_field :venue_id, placeholder: "#{@venue.id}", class: "form-control" %>
      <%= f.submit "Create Deal", class: "btn btn-large btn-primary" %>
    <% end %>
</div>