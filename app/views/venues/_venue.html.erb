<li style="list-style: none; margin-top:15px; margin-bottom: 15px;">
<div class="col-sm-6 col-lg-3 col-md-4">
  <%= image_tag("#{venue.image}", alt:'', style:'width:250px;', class:'img-rounded thumbnail') %>
  <h3><%= link_to venue.name, venue %></h3>
  <p><%= raw venue.tag_list.map { |t| link_to "#" + t, venue_tag_path(t) }.join(' ') %>
  <% if (user_signed_in? && current_user.admin?) %>
          <div>
            <%= link_to "Edit Venue", edit_venue_path(venue) %>
            <span> | </span>
            <%= link_to "Create Deal", new_deal_path(venue) %>
            <span> | </span>
            <%= link_to "delete", venue, method: :delete, data: { confirm: "Sure?"} %>
      	  </div><br/>
   <% end %>
</div>
</li>