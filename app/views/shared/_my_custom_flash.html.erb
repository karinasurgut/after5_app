<% flash.each do |key, value| %>
<div class="modal fade" id = "myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><%= key.capitalize %></h4>
      </div>
      <div class="modal-body">
        <p><%= value %><%#= flash[:notice] %></p>
      </div>
      <% if extrabtn %>
	      <div class="modal-footer center">
	      <h4>Did you like the deal?</h4>
	        <button type="button" class="btn btn-default">
			 <span class="glyphicon glyphicon-heart-empty"></span>  <%= link_to "Love", like_deal_path(id: deal), method: :put %>
			</button>
		
		<%# if current_user.find_down_voted_items.include?(deal) %>
			<button type="button" class="btn btn-default">
			 <span class="glyphicon glyphicon-flash"></span>  <%= link_to "Not a fan", dislike_deal_path(id: deal), method: :put %>
			</button>
	      </div>
	  <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>