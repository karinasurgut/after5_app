<% provide(:title, "Wishlist") %>
<div class="container" style = "padding-top:30px;">
<div class="row">	  
  <div class="col-lg-6 center">
    <%= userpic_for(@user,"large") %><br/>
    <h1 class="center  user-name">
      <%= @user.name %>
    </h1>
     <p class="center"><%= link_to 'Back to profile', user_path(@user), class: "btn btn-sm btn-default" %></p>
  </div> 
  <div class="col-lg-6 deals-user-list">
    <hr>
	<h3 class="center">Deals you want to try</h3>
  	<ul class="deals">
  		<% @deals = current_user.find_liked_items %>
  		<% @deals.each do |deal| %>
    		<%= render partial: 'deals/deal', locals: {deal: deal} %>
  		<% end %>
	</ul>
  </div>
</div>
</div>